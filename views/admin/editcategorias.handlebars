    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Categoria </h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
        <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="nome">Novo nome: </label>
            <input type="text" id="nome", name="nome" placeholder="Nome da categoria" class="form-control mt-1" value="{{categoria.nome}}">
        <label for="slug" class="mt-3">Nova slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control mt-1" value="{{categoria.slug}}">
        <button type="submit" class="btn btn-success mt-4">Editar categoria</button>
    </form>
    </div>
</div>