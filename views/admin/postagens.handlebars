<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-1">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <p>Data: {{data}}</p>
            <p>Categoria: {{categoria.nome}}</p>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-1">Editar</button></a>
            <form action="/admin/postagens/delete/{{_id}}" method="post">
                <button type="submit" class="btn btn-danger mt-3">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <p class="mt-4">Nenhuma postagem registrada!</p>
{{/each}}