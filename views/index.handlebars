<hr>

<h2>Postagens recentes: </h2>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <a href="/post/{{slug}}"><button class="btn btn-success">Ler mais</button></a>
            <hr>
            <small>{{categoria.nome}}</small>
            <small>Data de Publicação: {{data}}</small>
        </div>
    </div>
{{else}}
    <h5 class="mt-4">Nenhuma postagem registrada!</h5>
{{/each}}