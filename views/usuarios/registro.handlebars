{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}
{{/each}}

<h2>Crie sua conta hoje: </h2>
<div class="card mt-4">
    <div class="card-body">
        <form action="/usuarios/registro" method="post">
            <label for="nome" class="mt-2">Nome: </label>
                <input type="text" class="form-control" name="nome" required>
            <label for="email" class="mt-4">Email: </label>
                <input type="email" class="form-control" name="email" required>
            <label for="senha" class="mt-4">Senha: </label>
                <input type="password" class="form-control" name="senha" required>
            <label for="senha2" class="mt-4">Repita a sua senha: </label>
                <input type="password" class="form-control" name="senha2" required>
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>